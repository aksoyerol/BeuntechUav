
@model  IEnumerable<BeuntechSite.Models.Blog>

<div class="gray-bg">
    <section id="blog" class="section container blog-columns blog-preview">
        <div class="row">

            <header class="sec-heading">
                <h2>Son Yazılarımız</h2>
                <span class="subheading">Check out our blog to see what were up to</span>
            </header>

            @foreach (var item in Model)
            {


                <!-- Blog Post 1 -->
                <div class="col-lg-4 col-md-6 mb-sm-50">
                    <div class="blog-post wow fadeIn" data-wow-duration="2s">
                        <!-- Image -->
                        <a href="pages/blog/blog-post.html" class="post-img"><img src="@item.ResimURL" alt="@item.Baslik"></a>
                        <div class="bp-content">
                        @*900*715 resim*@
                            <!-- Meta data -->
                            <div class="post-meta">
                                <a href="#" class="post-date">
                                    <i class="fa fa-calendar-o"></i>
                                    <span>@item.tarih</span>
                                </a>
                                <a href="#" class="post-comments">
                                    <i class="fa fa-comments-o"></i>
                                    <span>12</span>
                                </a>
                            </div><!-- / .meta -->
                            <!-- Post Title -->
                            <a href="pages/blog/blog-post.html" class="post-title"><h4>@item.Baslik</h4></a>
                            <!-- Blurb -->
                            <p>@Html.Raw(item.Icerik)</p>
                            <!-- Link -->
                            <a href="pages/blog/blog-post.html" class="btn btn-small">Read More</a>
                        </div><!-- / .bp-content -->
                    </div><!-- / .blog-post -->
                </div><!-- / .col-lg-4 -->

            }
        </div><!-- / .row -->
    </section><!-- / .container -->
    </div>


