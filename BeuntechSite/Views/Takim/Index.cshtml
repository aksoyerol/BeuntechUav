@model IEnumerable<BeuntechSite.Models.Takim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create")
</p>
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bolum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UzmanlikAlani)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gorev)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResimURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkedIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instagram)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bolum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aciklama)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UzmanlikAlani)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gorev)
        </td>
        <td>
            <img src="@item.ResimURL" width="100" height="100" class="img-responsive" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkedIN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instagram)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UyeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.UyeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UyeID })
        </td>
    </tr>
}

</table>
