

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title</title>
    <meta content="" name="descriptison">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Content/BeuntechTheme/assets/img/favicon.png" rel="icon">
    <link href="~/Content/BeuntechTheme/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/BeuntechTheme/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/BeuntechTheme/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/Content/BeuntechTheme/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/BeuntechTheme/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/Content/BeuntechTheme/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/BeuntechTheme/assets/vendor/aos/aos.css" rel="stylesheet">

    <script src="~/Content/BeuntechTheme/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/BeuntechTheme/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/BeuntechTheme/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/Content/BeuntechTheme/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/BeuntechTheme/assets/vendor/jquery-sticky/jquery.sticky.js"></script>
    <script src="~/Content/BeuntechTheme/assets/vendor/venobox/venobox.min.js"></script>
    <script src="~/Content/BeuntechTheme/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Content/BeuntechTheme/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/Content/BeuntechTheme/assets/vendor/aos/aos.js"></script>



    <!-- Template Main JS File -->
    <script src="~/Content/BeuntechTheme/assets/js/main.js"></script>
    <!-- Template Main CSS File -->
    <link href="~/Content/BeuntechTheme/assets/css/style.css" rel="stylesheet">




    @if (ViewBag.Goster == true)
    {

        <section id="hero">
            <div class="hero-container">
                <a href="@Url.Action("Index", "Home")" class="hero-logo" data-aos="zoom-in"><img src="../../Uploads/beuntecuav-logo.png" style="height: 350px; " alt=""></a>
                <h1 data-aos="zoom-in">Beuntechuavteam'e Hoşgeldiniz !</h1>
                <h2 data-aos="fade-up">Beuntech Motto</h2>
                <a data-aos="fade-up" href="#hakkimizda" class="btn-get-started scrollto">Başlayalım</a>
            </div>
        </section><!-- End Hero -->
    }
    <!-- ======= Hero Section ======= -->
    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center" style="background: #444C5C;">
        <div class="container">

            <!-- The main logo is shown in mobile version only. The centered nav-logo in nav menu is displayed in desktop view  -->
            <div class="logo d-block d-lg-none">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/BeuntechTheme/assets/img/logo.png" alt="" class="img-fluid"></a>
            </div>

            <nav class="nav-menu d-none d-lg-block">
                <ul class="nav-inner">
                    <li class="active"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="#hakkimizda">Hakkımızda</a></li>
                    <li><a href="#birimler">Birimler</a></li>

                    <li class="nav-logo"><a href="@Url.Action("Index", "Home")"><img src="../../Uploads/beuntecuav-logo.png" width="110" height="7" alt="" class="img-fluid"></a></li>

                    <li><a href="#takim">Takım</a></li>
                    <li><a href="#questions">Sorular</a></li>
                    <li><a href="#contact">İletişim</a></li>

                </ul>
            </nav><!-- .nav-menu -->

        </div>

    </header><!-- End Header -->

    <body>

        @RenderBody()


        <footer id="footer">

            <div class="footer-top">

                <div class="container">

                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <a href="#header" class="scrollto footer-logo"><img src="~/Uploads/logo-white.png" style="height: 220px;" alt=""></a>
                            <h3>BEUNTECH UAV TEAM</h3>
                            <p>Beuntech ile alakalı kısa bir motto.</p>
                        </div>
                    </div>

                    <div class="row footer-newsletter justify-content-center">
                        <div class="col-lg-6">
                            <form action="" method="post">
                                <input type="email" name="email" placeholder="Mail Adresinizi Giriniz"><input type="submit" value="Haberdar ol">
                            </form>
                        </div>
                    </div>

                    <div class="social-links">
                        <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                        <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                        <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                        <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                        <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                    </div>

                </div>
            </div>

            <div class="container footer-bottom clearfix">
                <div class="copyright">
                    2020 &copy; Copyright <strong><span>Beuntechuavteam</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                   www.beuntechuavteam.com

                </div>
            </div>
        </footer><!-- End Footer -->

        <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

        <!-- Vendor JS Files -->

        <script src="~/Content/BeuntechTheme/assets/vendor/jquery/jquery.min.js"></script>
        <script src="~/Content/BeuntechTheme/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/Content/BeuntechTheme/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
        <script src="~/Content/BeuntechTheme/assets/vendor/php-email-form/validate.js"></script>
        <script src="~/Content/BeuntechTheme/assets/vendor/jquery-sticky/jquery.sticky.js"></script>
        <script src="~/Content/BeuntechTheme/assets/vendor/venobox/venobox.min.js"></script>
        <script src="~/Content/BeuntechTheme/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
        <script src="~/Content/BeuntechTheme/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
        <script src="~/Content/BeuntechTheme/assets/vendor/aos/aos.js"></script>

        <!-- Template Main JS File -->
        <script src="~/Content/BeuntechTheme/assets/js/main.js"></script>
        <!-- Template Main CSS File -->
        <link href="~/Content/BeuntechTheme/assets/css/style.css" rel="stylesheet">


    </body>


</html>
